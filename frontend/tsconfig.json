{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["assets/*"],
      "@configuration": ["configuration/index.ts"],
      "@common-types": ["common-types/index.ts"],
      "@constants": ["constants/index.ts"],
      "@components/*": ["components/*"],
      "@daigaku/components/application": ["components/application/index.ts"],
      "@daigaku/components/layout": ["components/layout/index.ts"],
      "@context/*": ["context/*"],
      "@hooks": ["hooks/index.ts"],
      "@pages/*": ["pages/*"],
      "@services": ["services/index.ts"],
      "@theme/*": ["theme/*"],
      "@utilities": ["utilities/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
