{
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "@daigaku/common-types": ["common-types/index.ts"],
      "@daigaku/components/core": ["components/core/index.ts"],
      "@daigaku/components/form": ["components/form/index.ts"],
      "@daigaku/components/general": ["components/general/index.ts"],
      "@daigaku/components/layout": ["components/layout/index.ts"],
      "@daigaku/components/notification": ["components/notification/index.ts"],
      "@daigaku/configuration": ["configuration/index.ts"],
      "@daigaku/constants": ["constants/index.ts"],
      "@daigaku/errors": ["errors/index.ts"],
      "@daigaku/hooks": ["hooks/index.ts"],
      "@daigaku/pages/common": ["pages/common/index.ts"],
      "@daigaku/pages/institution-admin": ["pages/institution-admin/index.ts"],
      "@daigaku/pages/mentor": ["pages/mentor/index.ts"],
      "@daigaku/pages/student": ["pages/student/index.ts"],
      "@daigaku/pages/system-admin": ["pages/system-admin/index.ts"],
      "@daigaku/providers": ["providers/index"],
      "@daigaku/services": ["services/index.ts"],
      "@daigaku/utilities": ["utilities/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
